<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRulerX.Pages.PictureSelection"
             Title="이미지">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="TargetImage" Source="test.jpg"/>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Button Text="사진 회전" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Clicked="Rotate_Button_Clicked"/>
                <Button Text="사진 촬영" Grid.Row="1" Grid.Column="0" Clicked="Camera_Button_Clicked"/>
                <Button Text="갤러리" Grid.Row="1" Grid.Column="1" Clicked="Gallery_Button_Clicked"/>
                <Button Text="사진 선택 완료" Grid.Row="1" Grid.Column="2" Clicked="Next_Button_Clicked"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>