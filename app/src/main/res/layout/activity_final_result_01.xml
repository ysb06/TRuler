<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phase.FinalResult">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/layout_finalresult_text_button_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_fr_upper_01"
                android:gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/upper01"
                android:id="@+id/image_fr_upper_01"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="@string/layout_finalresult_text_guide_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fr_guide_01_01"
                    android:gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fr_upper_risk"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/layout_finalresult_text_button_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_fr_lower_01"
                android:gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/upper01"
                android:id="@+id/image_fr_lower_01"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="@string/layout_finalresult_text_guide_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fr_guide_01_02"
                    android:gravity="center"
                    android:layout_weight="2" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_fr_lower_risk"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <view
        class="pe.hgs.truler.tools.view.ResultView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/result_fr_01"
        android:src="@drawable/tables2"
        android:layout_weight="1"
        android:scaleType="fitCenter"/>
</LinearLayout>
