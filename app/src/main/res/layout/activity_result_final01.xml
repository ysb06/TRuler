<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result_final01"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.hgs.truler.phase.ResultFinal01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/image_rf1_upper"
                android:src="@drawable/upper101"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/image_rf1_lower"
                android:src="@drawable/lower101"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:text="@string/layout_finalresult_button_upper"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/border"
                android:id="@+id/text_rf1_upper"
                android:gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="@string/layout_finalresult_text_guide_01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:id="@+id/text_rf1_upper_risk_guide"
                    android:gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:id="@+id/text_rf1_upper_risk"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:text="@string/layout_finalresult_button_lower"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/border"
                android:id="@+id/text_rf1_lower"
                android:gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="@string/layout_finalresult_text_guide_01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:id="@+id/text_rf1_lower_risk_guide"
                    android:gravity="center"
                    android:layout_weight="2"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/border"
                    android:id="@+id/text_rf1_lower_risk"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <view
        class="pe.hgs.truler.tools.view.ResultView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/result_rf1"
        android:src="@drawable/tableuv2u"
        android:layout_weight="6"
        android:scaleType="fitCenter"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/tableuv2g"
            android:id="@+id/imageView2"
            android:layout_weight="1"/>

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/text_rf1_comment"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:text="@string/layout_finalresult_button_summary_basic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_summary"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal"/>

        <Button
            android:text="@string/layout_finalresult_button_summary_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_summary_time"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal"/>

        <Button
            android:text="@string/layout_finalresult_button_upper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_upper"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal"/>

        <Button
            android:text="@string/layout_finalresult_text_button_lower"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_lower"
            android:layout_weight="1"
            android:background="?attr/colorButtonNormal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:text="@string/layout_finalresult_button_law"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_law"
            android:layout_weight="1"/>

        <Button
            android:text="@string/layout_finalresult_button_exercise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_rf1_exercise"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
