<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결    과"
        android:id="@+id/text_rf_temp_guide_01"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_rf_temp_guide_01"
        android:layout_above="@+id/layout_rf_linear_01"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:stretchColumns="*"
        android:id="@+id/layout_rf_table_01">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text=""
                android:id="@+id/text_rf_temp_guide_02"
                android:layout_column="0"/>

            <TextView
                android:text="1 단계"
                android:id="@+id/text_rf_temp_guide_03"
                android:layout_column="0"/>

            <TextView
                android:text="2 단계"
                android:id="@+id/text_rf_temp_guide_04"
                android:layout_column="0"/>

            <TextView
                android:text="3 단계"
                android:id="@+id/text_rf_temp_guide_05"
                android:layout_column="0"/>

            <TextView
                android:text="4 단계"
                android:id="@+id/text_rf_temp_guide_06"
                android:layout_column="0"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="..."
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_guide_07"
                android:layout_column="0"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:text="B0-S0-K0"
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_guide_08"
                android:layout_column="0"/>

            <TextView
                android:text=""
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_result_01"
                android:layout_column="0"/>

            <TextView
                android:text=""
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_result_02"
                android:layout_column="0"/>

            <TextView
                android:text=""
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_result_03"
                android:layout_column="0"/>

            <TextView
                android:text=""
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_result_04"
                android:layout_column="0"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:text="..."
                android:textAlignment="center"
                android:id="@+id/text_rf_temp_guide_09"
                android:layout_column="0"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_rf_linear_01">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전"
            android:id="@+id/button_rf_temp_prev"
            android:layout_column="0"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:id="@+id/button_rf_temp_next"
            android:layout_column="0"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>